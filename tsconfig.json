{
  "compilerOptions": {
    "target": "ES2020",                                  
    "module": "commonjs",
    "outDir": "./dist",    
    "moduleResolution": "node",                             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,      
    "strict": true,                                      
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
  }
}
